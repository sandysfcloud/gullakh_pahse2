<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D9177bbd" />
            <gradient android:angle="-90" android:startColor="#177bbd" android:endColor="#A6177bbd"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D9177bbd" />
            <solid android:color="#D9177bbd"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D9177bbd" />
            <gradient android:angle="-90" android:startColor="#A6177bbd" android:endColor="#177bbd" />
        </shape>
    </item>
</selector>