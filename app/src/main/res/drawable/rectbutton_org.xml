<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D94cae4c" />
            <gradient android:angle="-90" android:startColor="#4cae4c" android:endColor="#A64cae4c"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D94cae4c" />
            <solid android:color="#D9269abc"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#D94cae4c" />
            <gradient android:angle="-90" android:startColor="#A64cae4c" android:endColor="#4cae4c" />
        </shape>
    </item>
</selector>