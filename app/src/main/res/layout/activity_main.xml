<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fancy="http://schemas.android.com/tools"
    android:id="@+id/lin"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!--<include layout="@layout/toolbar"-->
 <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_layout"

        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
           android:id="@+id/content_frame"
           android:layout_width="match_parent"
           android:layout_height="match_parent" >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="My Profile"
                android:id="@+id/buttonMyprof"
                android:layout_gravity="left|bottom"
                android:background="#8BC34A"
                android:textColor="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="onClick" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:text="Policy &amp; Licences"
                android:id="@+id/buttonMyApp"
                android:layout_gravity="bottom|right"
                android:background="#8BC34A"
                android:textColor="#ffffff"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="onClick" />

            <com.gullakh.gullakhandroid.font.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/wellcome"
                android:id="@+id/textView"
                android:layout_gravity="center"
                android:layout_margin="15dp"
                android:textSize="25dp"
                android:textColor="#E53935"
                android:typeface="serif"
                android:gravity="center" />
        </FrameLayout>

        <com.gullakh.gullakhandroid.WheelView
            android:id="@+id/wheelview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:emptyItemColor="@color/green_900"
            app:wheelColor="#D83C2F"
            app:rotatableWheelDrawable="false"
            app:selectionAngle="90.0"
            app:selectionColor="@color/teal_900"
            app:selectionPadding="4dp"
            app:repeatItems="true"
            app:wheelRadius="155dp"
            app:wheelItemCount="4"
            app:wheelPadding="13dp"
            app:wheelItemRadius="35dp"/>

      <include
           android:layout_width="@dimen/drawer_width"
           android:layout_height="match_parent"
           android:layout_gravity="start"
           layout="@layout/expandable_listview" />
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>