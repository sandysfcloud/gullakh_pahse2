<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/google_card_media_background" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="8dp"
            android:layout_weight="2" >

            <ImageView
                android:id="@+id/bank_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="main_image"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#80b62025" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:id="@+id/list_item_google_cards_media_artist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:text="STATE BANK OF INDIA"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pay Monthly for 3 years: "
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/list_item_google_cards_media_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,524"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Floating: "
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/list_item_google_cards_media_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17.80%"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="One time fee: "
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2,456"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    />

            </LinearLayout>

