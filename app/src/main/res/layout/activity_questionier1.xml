<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
   android:background="#ffffff"
    tools:context="com.gullakh.gullakhandroid.Questionier1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="where do you live currently?"
        android:textSize="20dp"
        android:id="@+id/title"
        android:textColor="#000"

        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:background="#B3757575"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:weightSum="2">
       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_weight="1"
           android:minHeight="0dp"
           android:minWidth="0dp"

           android:id="@+id/img"
           android:src="@drawable/banglrimg"

           />
       <ImageView
           android:layout_width="120dp"
           android:layout_height="120dp"
           android:layout_weight="1"
           android:minHeight="0dp"
           android:minWidth="0dp"

           android:id="@+id/img2"
           android:src="@drawable/mumbaiimg"

           />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t1"
            android:textColor="#000"
            android:text="Bangalore"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t2"
            android:textColor="#000"
            android:text="Mumbai"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:weightSum="2">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img3"
            android:src="@drawable/chanaiimg"

            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img4"
            android:src="@drawable/otherimg"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/t3"
            android:textColor="#000"
            android:text="Chanai"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16dp"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/t4"
            android:text="Other"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2"
       >
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:id="@+id/back"
        android:gravity="left"
        android:layout_marginRight="80dp"
        android:layout_gravity="left"
        android:src="@drawable/backimgnw"

        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:id="@+id/next"
        android:layout_marginLeft="80dp"
        android:layout_gravity="right"
        android:src="@drawable/nextimgnw"

        />
</LinearLayout>
</LinearLayout>