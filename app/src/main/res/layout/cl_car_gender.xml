<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:weightSum="2"
        android:gravity="center"
        android:layout_marginBottom="10dp">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/back"
            android:gravity="left"
            android:layout_marginRight="100dp"
            android:layout_gravity="bottom|left"
            android:background="@drawable/backimgnw" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/next"
            android:layout_marginLeft="100dp"
            android:background="@drawable/nextimgnw" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView4" >

    </ScrollView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top">

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/FirstName"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextsimple"
            android:hint="First Name"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/LastName"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextsimple"
            android:hint="Last Name"
            android:gravity="center"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Select your  Gender ?"
            android:id="@+id/TextViewHeading1"
            android:textColor="#4b4b4b"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="#b1b7b7b7" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/usermale"

                android:background="@drawable/usermale"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="10dp" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/userfemale"

                android:background="@drawable/userfemale"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:id="@+id/TextViewOption1"
                android:textColor="#4b4b4b"
                android:text="Male"

                android:layout_marginLeft="40dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp"
                android:id="@+id/TextViewOption2"
                android:textColor="#4b4b4b"
                android:text="Female"
                android:layout_marginRight="40dp" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
