<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView4"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center">

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/FirstName"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:hint="First Name"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/LastName"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:hint="Last Name"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:text="Select your  gender ?"
                android:id="@+id/TextViewHeading1"
                android:textColor="#4b4b4b"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="#b1b7b7b7" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/usermale"

                    android:background="@drawable/usermale"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="10dp" />
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/userfemale"

                    android:background="@drawable/userfemale"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="40dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="30dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/TextViewOption1"
                    android:textColor="#4b4b4b"
                    android:text="Male"

                    android:layout_marginLeft="40dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/TextViewOption2"
                    android:textColor="#4b4b4b"
                    android:text="Female"
                    android:layout_marginRight="40dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:layout_marginTop="30dp">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/back"
                    android:gravity="left"
                    android:layout_gravity="left|bottom"
                    android:background="@drawable/backimgnw"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginRight="20dp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:text="Submit Application"
                    android:id="@+id/Submit"
                    android:layout_gravity="right|bottom"
                    android:background="@drawable/submitbutton"
                    android:textColor="#ffffff"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>
