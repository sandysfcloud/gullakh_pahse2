<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center">


        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/addr1"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextsimple"
            android:hint="Address  line 1"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:singleLine="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/addr2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextsimple"
            android:hint="Address  line 2"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/pin"
            android:inputType="number"
            android:maxLength="6"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edittextsimple"
            android:hint="PIN code"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:singleLine="true" />
        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/city"
            android:background="@drawable/edittextsimple"
            android:hint="City"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:singleLine="true" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:id="@+id/state"
            android:background="@drawable/edittextsimple"
            android:hint="State"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:singleLine="true" />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:id="@+id/back"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrowleft"
            android:background="#b8546e7a"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"
            android:gravity="fill" />

        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:id="@+id/Submit"
            android:background="#b8546e7a"
            android:textColor="#ffffff"
            android:drawableRight="@drawable/arrowright"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textSize="22dp"
            android:paddingRight="15dp"
            android:paddingLeft="60dp" />
    </LinearLayout>

</LinearLayout>
