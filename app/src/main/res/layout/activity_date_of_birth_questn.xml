<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/ldateofb"
    android:orientation="vertical">
    <com.gullakh.gullakhandroid.font.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="My Gender"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:textColor="#3f3f3f"
        app:typeface="robotoLight"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp">




        <com.gullakh.gullakhandroid.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/TextViewOption1"
            android:textColor="#4b4b4b"
            android:text="Male"

            android:gravity="right"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/usermale"

            android:background="@drawable/usermale"
            android:layout_marginRight="10dp" />

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/userfemale"

            android:background="@drawable/userfemale"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp" />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/TextViewOption2"
            android:textColor="#4b4b4b"
            android:text="Female"
            android:gravity="left"
            android:layout_marginLeft="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_weight="1">


        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/TextViewOption4"
            android:textColor="#3f3f3f"
            app:typeface="robotoLight"
             />

        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"


            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#fff"
            app:mtf_image="@drawable/bdy"
            >

            <com.gullakh.gullakhandroid.font.RobotoEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:focusableInTouchMode="false"
                android:id="@+id/birthdate"
                android:textColorHint="#000"
                android:textColor="#000"
                android:textSize="20sp"
                app:typeface="robotoLight"/>

        </com.gullakh.gullakhandroid.MaterialTextField>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ldone"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#b8546e7a"
        android:visibility="gone">
        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Done"
            android:gravity="center"

            android:id="@+id/done"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"

            app:typeface="robotoLight"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#b8546e7a">

        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:id="@+id/back"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrowleft"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"
            android:gravity="fill"
            app:typeface="robotoLight"/>
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ed1c24"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next"
            android:drawableRight="@drawable/arrowright"
            android:id="@+id/next"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:singleLine="false"
            android:paddingRight="15dp"
            android:paddingLeft="95dp"
            app:typeface="robotoLight"/>
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/lempl"
        android:gravity="center"
        android:layout_marginTop="100dp"
        >


        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"

            android:text="Name Of Current Employer"
            android:layout_marginBottom="10dp"
            android:textColor="#3f3f3f"
            app:typeface="robotoLight"
            />

        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"


            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#fff"
            app:mtf_image="@drawable/companyname"
            >

            <com.gullakh.gullakhandroid.font.RobotoAutoText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""

                android:id="@+id/salEmpname"
                android:textColorHint="#000"
                android:textColor="#000"
                android:textSize="18sp"
                app:typeface="robotoLight"/>

        </com.gullakh.gullakhandroid.MaterialTextField>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"

            android:gravity="bottom"

            >
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/footer2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"

            android:background="#b8546e7a">

            <com.gullakh.gullakhandroid.font.RobotoButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Previous"
                android:id="@+id/back2"
                android:layout_weight="1"
                android:drawableLeft="@drawable/arrowleft"
                android:background="#00ffffff"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:paddingLeft="15dp"
                android:gravity="fill"
                app:typeface="robotoLight"/>
            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:background="#ed1c24"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
            <com.gullakh.gullakhandroid.font.RobotoButton
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Next"
                android:drawableRight="@drawable/arrowright"
                android:id="@+id/next2"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:background="#00ffffff"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:singleLine="false"
                android:paddingRight="15dp"
                android:paddingLeft="95dp"
                app:typeface="robotoLight"/>
        </LinearLayout> </LinearLayout>
    </LinearLayout>
</LinearLayout>

