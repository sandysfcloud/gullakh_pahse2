    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:gravity="center">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img"

            android:background="@drawable/newcar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t1"
            android:textColor="#000"
            android:text="New Car Loan"
            app:typeface="robotoLight"
            android:layout_marginBottom="10dp"

            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img2"

            android:background="@drawable/usedcar"
            android:layout_marginTop="20dp" />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t2"
            android:textColor="#000"
            app:typeface="robotoLight"
            android:text="Used Car Loan"></com.gullakh.gullakhandroid.font.RobotoTextView>










