    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Select Type of Car Loan"
        android:textSize="20dp"
        android:id="@+id/title"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="30dp"
        android:textColor="#000"

        />
    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="28dp"

        android:background="#B3757575"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="2">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img"
            android:src="@drawable/newcar"

            />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:minHeight="0dp"
            android:minWidth="0dp"

            android:id="@+id/img2"
            android:src="@drawable/usedcar"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t1"
            android:textColor="#000"
            android:text="New Car Loan"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="16dp"
            android:id="@+id/t2"
            android:textColor="#000"
            android:text="Used Car Loan"
            />
    </LinearLayout>
        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#D83C2F"
            app:mtf_image="@drawable/loan_amt"
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other"
                android:id="@+id/locatn"
                android:textColorHint="#fff"

                android:textColor="#fff"
                android:textSize="15sp" />

        </com.gullakh.gullakhandroid.MaterialTextField>


</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_weight="1"
        android:layout_gravity="bottom"
        android:weightSum="2"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/back"
            android:gravity="left"
            android:layout_marginRight="80dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/backimgnw"

            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/next"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/nextimgnw"

            />
    </LinearLayout>
</LinearLayout>




