<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgque"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gullakh.gullakhandroid.coappldetail">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:id="@+id/lmain"
    android:orientation="vertical">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"

        android:orientation="vertical"
        android:gravity="center"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/lfath"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:gravity="center"
            >
        <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"

        android:src="@drawable/coappimg"/>


            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/fath"
                android:textColor="#4b4b4b"
                android:text="Father"
                />

            <com.gullakh.gullakhandroid.font.RobotoButton
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:id="@+id/bfath"
             android:padding="10dp"
                android:background="#b8546e7a"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/arrowright"
                android:textAllCaps="false"
                android:textSize="16dp"
                />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/lmoth"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/coappimg"/>


            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/moth"
                android:textColor="#4b4b4b"
                android:text="Mother"
                />

            <com.gullakh.gullakhandroid.font.RobotoButton
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:id="@+id/bmoth"
                android:padding="10dp"
                android:background="#b8546e7a"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/arrowright"
                android:textAllCaps="false"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:visibility="gone"
            android:id="@+id/lbro"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/coappimg"/>


            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/bro"
                android:textColor="#4b4b4b"
                android:text="Brother"
                />

            <com.gullakh.gullakhandroid.font.RobotoButton
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:id="@+id/bbro"
                android:padding="10dp"
                android:background="#b8546e7a"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/arrowright"
                android:textAllCaps="false"
                android:textSize="16dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:id="@+id/lspou"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@drawable/coappimg"/>


            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="18dp"
                android:layout_marginLeft="8dp"
                android:id="@+id/spou"
                android:textColor="#4b4b4b"
                android:text="Spouse"
                />

            <com.gullakh.gullakhandroid.font.RobotoButton
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Submit"
                android:id="@+id/bspous"
                android:padding="10dp"
                android:background="#b8546e7a"
                android:textColor="#ffffff"
                android:drawableRight="@drawable/arrowright"
                android:textAllCaps="false"
                android:textSize="16dp"
                />
        </LinearLayout>
    </LinearLayout>
        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textAllCaps="false"
            android:id="@+id/done"
            android:background="@drawable/mainbutton"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:layout_margin="5dp" />
    </LinearLayout>
</LinearLayout>
