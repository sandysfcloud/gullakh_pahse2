<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgque"
    android:weightSum="1">

    <!--<Spinner
        android:layout_margin="20dp"
        android:id="@+id/spinner"
        android:padding="8dp"
        android:background="@drawable/imageview_stroke"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

    />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/ImageViewCar1"

                android:background="@drawable/car_maru"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/ImageViewCar2"

                android:background="@drawable/caramaze"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:textColor="#3f3f3f"
                android:text="Maruti Alto"

                android:id="@+id/TextViewOption1"
                android:layout_weight="1" />
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:id="@+id/TextViewOption2"
                android:textColor="#3f3f3f"
                android:text="Honda Amaze"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/ImageViewCar3"

                android:background="@drawable/careon"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/ImageViewCar4"

                android:background="@drawable/car_swift"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp">
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:id="@+id/TextViewOption3"
                android:textColor="#3f3f3f"
                android:text="Hyundai Eon"

                android:layout_weight="1" />
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="18dp"
                android:id="@+id/TextViewOption4"
                android:textColor="#3f3f3f"
                android:text="Maruti Swift"
                android:layout_weight="1" />
        </LinearLayout>




        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#fff"
            app:mtf_image="@drawable/car">

            <com.gullakh.gullakhandroid.font.RobotoAutoText
                app:typeface="robotoLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Other"
                android:id="@+id/OtherCar"
                android:textColorHint="#fff"
                android:inputType="text"
                android:textColor="#3f3f3f"
                android:textSize="18sp"
                android:imeOptions="actionDone"
                android:singleLine="true" />

        </com.gullakh.gullakhandroid.MaterialTextField>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#b8546e7a"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1">

        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next "
            android:drawableRight="@drawable/arrowright"
            android:id="@+id/next"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:singleLine="false"
            android:paddingRight="25dp"
            android:gravity="center|right"
            android:typeface="sans" />
    </LinearLayout>


</LinearLayout>
