<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgque">

    <!--<Spinner
        android:layout_margin="20dp"
        android:id="@+id/spinner"
        android:padding="8dp"
        android:background="@drawable/imageview_stroke"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

    />-->
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Which car are you interested in?"
                android:id="@+id/TextViewHeading2"
                android:textColor="#4b4b4b"
                android:layout_marginTop="20dp"
                android:textSize="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/ImageButtonCar1"

                    android:background="@drawable/usedcar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/ImageButtonCar2"

                    android:background="@drawable/caramaze"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginBottom="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:textColor="#3f3f3f"
                    android:text="Maruti Alto"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp"
                    android:id="@+id/TextViewOption1" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/TextViewOption2"
                    android:textColor="#3f3f3f"
                    android:text="Honda Amaze"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:gravity="center">
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/ImageButtonCar3"

                    android:background="@drawable/careon"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"

                    android:id="@+id/ImageButtonCar4"

                    android:background="@drawable/newcar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/TextViewOption3"
                    android:textColor="#3f3f3f"
                    android:text="Hyundai Eon"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="30dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:id="@+id/TextViewOption4"
                    android:textColor="#3f3f3f"
                    android:text="Maruti Swift"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="20dp" />
            </LinearLayout>




            <com.gullakh.gullakhandroid.MaterialTextField
                android:layout_width="300dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="20dp"
                app:mtf_cardCollapsedHeight="4dp"
                app:mtf_cardColor="#D83C2F"
                app:mtf_image="@drawable/loan_amt"
                >

                <AutoCompleteTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Other"
                    android:id="@+id/locatn"
                    android:textColorHint="#fff"

                    android:textColor="#fff"
                    android:textSize="15sp" />

            </com.gullakh.gullakhandroid.MaterialTextField>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/back"
                    android:gravity="left"
                    android:layout_marginRight="100dp"
                    android:layout_gravity="bottom|left"

                    android:background="@drawable/backimgnw" />
                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/next"
                    android:layout_marginLeft="100dp"

                    android:background="@drawable/nextimgnw" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</LinearLayout>
