<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f5f5f5">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.gullakh.gullakhandroid.font.RobotoTextView
                android:id="@+id/signupheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_button_selector"
                android:text="Sign Up Now..!!!"
                android:textColor="#e7000000"
                android:textSize="34sp"


                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="50dp" />

           <!-- <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textPersonName"
                android:hint="Userame"
                android:ems="10"
                android:id="@+id/editText"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />-->

            <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:ems="10"
                android:id="@+id/emailaddress"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />

          <!--  <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/editText3"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />-->

            <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="phone"
                android:hint="Mobile number"
                android:ems="10"
                android:id="@+id/mobilenumber"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />

            <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/password"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />

            <CheckBox
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="I agree to the Terms and Conditions"
                android:id="@+id/checkBox"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:textSize="13dp"
                android:textColor="#747373">
            </CheckBox>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp">

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:text="Register"
                    android:id="@+id/Registerbutton"
                    android:layout_gravity="left|bottom|center_horizontal"
                    android:background="@drawable/mainbutton"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:text="SignIn"
                    android:id="@+id/signinbutton"
                    android:layout_gravity="left|bottom|center_horizontal"
                    android:background="@drawable/mainbutton"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="or"
                    android:id="@+id/textView2"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:layout_weight="0.04"
                    android:layout_margin="20dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/fb"
                    android:layout_weight="0.05" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/googleplus"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>