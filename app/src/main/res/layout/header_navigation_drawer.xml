<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="172dp" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:src="@drawable/color_backg3" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="60dp"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"

            android:layout_alignParentStart="true"

            >

        <ImageView
            android:id="@+id/image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/user"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp" />


            <com.gullakh.gullakhandroidapp.font.RobotoTextView
                android:id="@+id/email"
                style="@style/TextViewAppearance.Body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="14dp"
                android:paddingLeft="10dp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="name"
                android:layout_marginTop="30dp"
              />




        </LinearLayout>
        <com.gullakh.gullakhandroidapp.font.RobotoButton
            android:id="@+id/logout"
            android:visibility="invisible"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_marginTop="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#ffffff"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rectbutton_red"
            android:text="Logout"
            app:typeface="robotoLight"/>

    </LinearLayout>

</RelativeLayout>