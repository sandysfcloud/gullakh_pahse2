<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_horizontal">

        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Which Bank is your existing loan with?"
            android:id="@+id/textView"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="left|center_vertical"
            android:background="#2cababab"
            android:paddingLeft="10dp" />

        <com.gullakh.gullakhandroidapp.font.RobotoAutoText
            app:typeface="robotoLight"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="textCapSentences"
            android:ems="10"
            android:imeOptions="actionNext"
            android:id="@+id/editText1"
            android:background="@drawable/edittextsimple"
            android:hint="Ex-SBI"
            android:gravity="center_vertical"
            android:paddingLeft="10dp" />

        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="When did you begin your existing loan?"
            android:id="@+id/textView1"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:background="#2cababab"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp" />

        <com.gullakh.gullakhandroidapp.font.RobotoEditText
            app:typeface="robotoLight"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/editText2"
            android:background="@drawable/edittextsimple"
            android:hint="Ex-May-2000"
            android:paddingLeft="10dp"
            android:cursorVisible="false"
            android:singleLine="true" />


        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Present outstanding balance of loan you wish to transfer(approx)?"
            android:id="@+id/textView2"
            android:textSize="16dp"
            android:textColor="#000000"
            android:background="#2cababab"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp" />

        <com.gullakh.gullakhandroidapp.font.RobotoEditText
            app:typeface="robotoLight"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText3"
            android:background="@drawable/edittextsimple"
            android:hint="1,00,000"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/loan_amt"/>

        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Please enter Top-up amount if requried."
            android:id="@+id/textView3"
            android:textSize="16dp"
            android:textColor="#000000"
            android:gravity="center_vertical"
            android:paddingRight="10dp"
            android:background="#2cababab"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp" />

        <com.gullakh.gullakhandroidapp.font.RobotoEditText
            app:typeface="robotoLight"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4"
            android:background="@drawable/edittextsimple"
            android:hint="1,00,000"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/loan_amt"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/linearLayout3"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#b8546e7a"
        android:layout_gravity="center_horizontal">

        <com.gullakh.gullakhandroidapp.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:id="@+id/back"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrowleft"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"
            android:gravity="fill" />
        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#ed1c24"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />
        <com.gullakh.gullakhandroidapp.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next"
            android:drawableRight="@drawable/arrowright"
            android:id="@+id/next"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:singleLine="false"
            android:paddingRight="15dp"
            android:paddingLeft="95dp" />
    </LinearLayout>

</LinearLayout>
