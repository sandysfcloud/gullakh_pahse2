<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <!--<Spinner
        android:layout_margin="20dp"
        android:id="@+id/spinner"
        android:padding="8dp"
        android:background="@drawable/imageview_stroke"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

    />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Which year you joined the current company ?"
            android:id="@+id/joining_year"
            android:gravity="left"
            android:textColor="#4a4a4a"
            android:textSize="20dp" />

        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal|top"
            android:layout_height="wrap_content"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#D83C2F"
            app:mtf_image="@drawable/loan_amt">

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year of joining"
                android:id="@+id/joiningyear"
                android:textColorHint="#fff"

                android:textColor="#fff"
                android:textSize="15sp" />

        </com.gullakh.gullakhandroid.MaterialTextField>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2"
        android:layout_gravity="top"
        android:gravity="center"
        android:layout_marginTop="200dp">
        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Total Experince ?"
            android:id="@+id/joining_year"
            android:gravity="left"
            android:textColor="#4a4a4a"
            android:textSize="20dp" />

        <com.gullakh.gullakhandroid.MaterialTextField
            android:layout_width="300dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="20dp"
            app:mtf_cardCollapsedHeight="4dp"
            app:mtf_cardColor="#D83C2F"
            app:mtf_image="@drawable/loan_amt"
            >

            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Year and month of joining"
                android:id="@+id/totalexp"
                android:textColorHint="#fff"

                android:textColor="#fff"
                android:textSize="15sp" />

        </com.gullakh.gullakhandroid.MaterialTextField>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal|bottom"
        android:weightSum="2"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/back"
            android:gravity="left"
            android:layout_marginRight="80dp"
            android:layout_gravity="bottom|left"
            android:src="@drawable/backimgnw"

            />
        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:id="@+id/next"
            android:layout_marginLeft="80dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/nextimgnw"

            />
    </LinearLayout>

</FrameLayout>
