<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#f5f5f5">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.gullakh.gullakhandroid.font.RobotoTextView
                android:id="@+id/signupheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/transparent_button_selector"
                android:text="Sign in here..!!!"
                android:textColor="#e7000000"
                android:textSize="34sp"


                android:gravity="center"
                android:layout_marginTop="30dp" />

            <!-- <EditText
                 android:layout_width="250dp"
                 android:layout_height="45dp"
                 android:inputType="textPersonName"
                 android:hint="Userame"
                 android:ems="10"
                 android:id="@+id/editText"
                 android:layout_gravity="center_horizontal"
                 android:background="@drawable/edittextsimple"
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="5dp"
                 android:layout_marginRight="5dp"
                 android:paddingLeft="10dp"
                 android:textColorHint="#b2b2b2" />-->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton3"
                    android:background="@drawable/googleplus"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:id="@+id/textView2"
                    android:textColor="#000000"
                    android:textSize="22dp" />

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/imageButton2"
                    android:background="@drawable/fb"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>

            <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textEmailAddress"
                android:hint="Email or Mobile"
                android:ems="10"
                android:id="@+id/emailaddress"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />

            <!--  <EditText
                  android:layout_width="250dp"
                  android:layout_height="45dp"
                  android:inputType="textPassword"
                  android:hint="Password"
                  android:ems="10"
                  android:id="@+id/editText3"
                  android:layout_gravity="center_horizontal"
                  android:background="@drawable/edittextsimple"
                  android:layout_marginLeft="5dp"
                  android:layout_marginTop="5dp"
                  android:layout_marginRight="5dp"
                  android:typeface="sans"
                  android:paddingLeft="10dp"
                  android:textColorHint="#b2b2b2" />-->



            <EditText
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:inputType="textPassword"
                android:hint="Password"
                android:ems="10"
                android:id="@+id/password"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:typeface="sans"
                android:paddingLeft="10dp"
                android:textColorHint="#b2b2b2" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:weightSum="1"
                android:gravity="center"
                android:layout_marginTop="50dp">



                <Button
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="125dp"
                    android:layout_height="match_parent"
                    android:text="Login"
                    android:id="@+id/signinbutton"
                    android:layout_gravity="left|bottom|center_horizontal"
                    android:background="@drawable/mainbutton"
                    android:textColor="#ffffff"
                    android:textSize="20dp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
                android:padding="15dp"
                android:text="Forgot Password"
                android:background="#ffffff"
                android:layout_margin="20dp" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>