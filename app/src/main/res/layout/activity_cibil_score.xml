<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"

    android:background="@drawable/bgque"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lmain"
        android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrlmain"

        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            android:id="@+id/ll2"
            android:gravity="center"
            android:layout_weight="1">



            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Name"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:id="@+id/nam"
                    android:textColor="#000000"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"

                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date of Birth"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:inputType="text"
                    android:id="@+id/dob"
                    android:textColor="#000000"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address"
                    android:id="@+id/textView26"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:lines="5"
                    android:inputType="textMultiLine"
                    android:textSize="16dp"
                    android:id="@+id/addr"
                    android:textColor="#000000"
                    android:scrollbars = "vertical"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"

                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_gravity="center_horizontal">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PAN Id"

                    android:id="@+id/textView28"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/panid"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:maxLength="10"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_gravity="center_horizontal">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="City"
                    android:id="@+id/textView29"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />


                <Spinner    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:layout_marginRight="10dp"

                    android:drawSelectorOnTop="true"
                    android:background="@drawable/edittextsimple"
                    android:spinnerMode="dialog"

                    />


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:gravity="center">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="State"

                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:inputType="textCapWords"
                    android:padding="13dp"

                    android:id="@+id/state"
                    android:textColor="#000000"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"

                    android:focusableInTouchMode="false"
                    android:singleLine="true" />





            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:gravity="center">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Pin Code"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textSize="16dp"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:maxLength="6"
                    android:id="@+id/zip"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"

                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:weightSum="1"
                android:gravity="center">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Loan Type"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <Spinner android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="16dp"

                    android:layout_marginRight="14dp"
                    android:textColor="#000000"
                    android:drawSelectorOnTop="true"

                    android:background="@drawable/edittextsimple"
                    android:spinnerMode="dialog"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ldone"
        android:gravity="bottom"

        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#b8546e7a"
        >
        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Done"
            android:gravity="center"

            android:id="@+id/done"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"

            app:typeface="robotoLight"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>