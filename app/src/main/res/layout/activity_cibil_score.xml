<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView9"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:visibility="visible"
            android:id="@+id/ll2"
            android:gravity="center"
            android:layout_weight="1">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Date of Birth"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/dob"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Address"
                    android:id="@+id/textView26"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/addr"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_gravity="center_horizontal">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="PAN Id"
                    android:id="@+id/textView28"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/panid"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:layout_gravity="center_horizontal">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="City"
                    android:id="@+id/textView29"
                    android:textSize="16dp"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/city"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:gravity="center">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="204dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="State"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <com.gullakh.gullakhandroid.font.RobotoEditText
                    app:typeface="robotoLight"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="text"
                    android:id="@+id/state"
                    android:background="@drawable/edittextsimple"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="10dp"
                    android:focusableInTouchMode="false"
                    android:singleLine="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="#2cababab"
                android:layout_marginTop="10dp"
                android:weightSum="1"
                android:gravity="center">

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    app:typeface="robotoLight"
                    android:layout_width="204dp"
                    android:layout_height="60dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Loan Type"
                    android:textColor="#000000"
                    android:textSize="16dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp" />

                <Spinner android:id="@+id/spinner1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:textColor="#616161"
                    android:layout_marginRight="14dp"
                    android:textSize="15sp"
                    android:drawSelectorOnTop="true"
                    android:entries="@array/sortby"
                    android:background="@drawable/edittextsimple"
                    android:spinnerMode="dialog"

                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>