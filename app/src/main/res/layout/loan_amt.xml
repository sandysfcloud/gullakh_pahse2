<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res/com.gullakh.gullakhandroid"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/bgque"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gullakh.gullakhandroid.Questionier1">


<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/seekArcContainer"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        >

        <com.gullakh.gullakhandroid.SeekArc
            android:id="@+id/seekArc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"
            seekarc:arcColor="@color/main_color_500"
            seekarc:clockwise="true"
            seekarc:max="25"

            seekarc:progressColor="@color/main_color_500"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"
            seekarc:thumb="@drawable/custom_seek_arc_control_selector"
            seekarc:touchInside="true" />

        <TextView
            android:id="@+id/seekArcProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="50,000"
            android:textColor="@color/main_color_500"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/onetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loan Amount"
            android:layout_marginTop="75dp"
            android:textColor="@color/main_color_500"
            android:textSize="20sp" />
    </FrameLayout>
</LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <com.gullakh.gullakhandroid.MaterialTextField
        android:layout_width="300dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"

        app:mtf_cardCollapsedHeight="4dp"
        app:mtf_cardColor="@color/main_color_500"
        app:mtf_image="@drawable/loan_amt"
        >

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Other"
            android:id="@+id/loanamountid"
            android:ems="10"
            android:inputType="phone"
            android:text="50000"
            android:textColorHint="#fff"
            android:textColor="#fff"
            android:textSize="15sp" />

    </com.gullakh.gullakhandroid.MaterialTextField>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/done"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_gravity="bottom|center"
        android:src="@drawable/donenew"

        />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"

            android:layout_gravity="bottom"
            android:weightSum="3"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/back"
                android:gravity="left"
                android:layout_marginRight="80dp"
                android:layout_gravity="bottom|left"
                android:src="@drawable/backimgnw"

                />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:id="@+id/review"

                android:layout_gravity="bottom|right"
                android:src="@drawable/reviewred"

                />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:id="@+id/next"
                android:layout_marginLeft="80dp"
                android:layout_gravity="bottom|right"
                android:src="@drawable/nextimgnw"

                />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    </LinearLayout>





