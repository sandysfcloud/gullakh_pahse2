<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:seekarc="http://schemas.android.com/apk/res/com.gullakh.gullakhandroid"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgque"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.gullakh.gullakhandroid.Questionier1"
    android:orientation="vertical">


    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"

        android:layout_weight="1"
        android:gravity="center">
    <FrameLayout
        android:id="@+id/seekArcContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"

        android:layout_gravity="center_horizontal"
        >

        <com.gullakh.gullakhandroid.SeekArc
            android:id="@+id/seekArc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="30dp"

            seekarc:arcColor="@color/main_color_500"
            seekarc:clockwise="true"
            seekarc:max="150"

            seekarc:progressColor="@color/main_color_500"
            seekarc:rotation="180"
            seekarc:startAngle="30"
            seekarc:sweepAngle="300"

            seekarc:thumb="@drawable/custom_seek_arc_control_selector"
            seekarc:touchInside="true" />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/seekArcProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="50,000"
            android:textColor="@color/main_color_500"
            android:textSize="30sp"
            app:typeface="robotoLight"/>

        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/onetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Loan Amount"
            android:layout_marginTop="75dp"
            android:textColor="@color/main_color_500"
            android:textSize="20sp"
            app:typeface="robotoLight"/>
    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<com.gullakh.gullakhandroid.MaterialTextField
    android:layout_width="300dp"
    android:layout_gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"

    app:mtf_cardCollapsedHeight="4dp"
    app:mtf_cardColor="#ffffff"
    app:mtf_image="@drawable/loan_amt"
    >

    <com.gullakh.gullakhandroid.font.RobotoEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Other"
        android:id="@+id/loanamountid"

        android:inputType="numberDecimal"
        android:digits="0123456789.,"
        android:text="50000"
        android:textColorHint="#000"
        android:textColor="#000"
        android:textSize="18sp"
        app:typeface="robotoLight"/>

</com.gullakh.gullakhandroid.MaterialTextField>

</LinearLayout>
</LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ldone"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#b8546e7a"
        android:visibility="gone"
     >
        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Done"
            android:gravity="center"

            android:id="@+id/done"
            android:layout_weight="1"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"

            app:typeface="robotoLight"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/footer"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="#b8546e7a"
        android:layout_gravity="bottom">

        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:id="@+id/back"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrowleft"
            android:background="#00ffffff"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"
            android:gravity="fill"
            app:typeface="robotoLight"/>

        <com.gullakh.gullakhandroid.font.RobotoButton
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next"
            android:drawableRight="@drawable/arrowright"
            android:id="@+id/next"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="#00ffffff"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:singleLine="false"
            android:paddingRight="15dp"
            android:paddingLeft="95dp"
            app:typeface="robotoLight"/>
    </LinearLayout>

</LinearLayout>


