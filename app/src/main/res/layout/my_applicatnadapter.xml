<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_background_white"
    android:orientation="vertical"
    android:layout_marginTop="-10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="5dp" >

        <!--<com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROMO"
            android:textColor="#4cae4c"
            android:textSize="16sp"
             />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:text="Special discount! Buy it now!"
            android:textColor="@color/material_red_500"
            android:textSize="20sp"
           />-->
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="128dp" >

        <ImageView

            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:contentDescription="cd_main_image"
            android:scaleType="centerCrop" />

        <!-- <ImageView

             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_centerInParent="true"
            android:src="@mipmap/personal_backg2"


             />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="128dp"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:orientation="horizontal">


                <ImageView
                android:id="@+id/bankimg"
                android:layout_weight="2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="50dp"

                android:layout_marginLeft="-10dp"
                android:src="@drawable/carloan"
                android:background="@android:color/transparent"
                />
                <ImageView

                    android:layout_weight="3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginRight="50dp"

                    android:layout_marginLeft="-10dp"

                    android:background="@android:color/transparent"
                    />

                <com.gullakh.gullakhandroid.font.RobotoButton
                    android:id="@+id/apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                   android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"

                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rectbutton_org"
                    android:text="Upload"
                    app:typeface="robotoLight"
                    android:visibility="gone" />
                <com.gullakh.gullakhandroid.font.RobotoButton
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="10dp"
                    android:layout_marginRight="8dp"

                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    android:padding="8dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/rectbutton_org"
                    android:text="VIEW"
                    app:typeface="robotoLight"
                    android:visibility="gone" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:id="@+id/line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:background="#80616161"/>
        </LinearLayout>
        <!--<com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/list_item_google_cards_shop_buy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_weight="0"
            android:background="#4cae4c"
            android:gravity="center"
            android:minHeight="36dp"
            android:minWidth="64dp"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="BUY"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:weightSum="3"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:paddingLeft="12dp"
                android:paddingRight="5dp"

                android:paddingBottom="8dp"
                android:orientation="vertical" >

                <com.gullakh.gullakhandroid.font.RobotoTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:maxLines="2"
                    android:text="Application no."
                    android:textColor="#616161"
                    android:textSize="14sp"
                    app:typeface="robotoLight"
                    />

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    android:id="@+id/applno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:text="2,300"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    app:typeface="robotoLight"
                    />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="40dp"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="-2dp"
                android:layout_marginRight="15dp"
                android:background="#80616161" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_weight="1"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"

                android:paddingBottom="8dp"
                android:orientation="vertical" >

                <com.gullakh.gullakhandroid.font.RobotoTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:maxLines="2"
                    android:text="Status"
                    android:textColor="#616161"
                    android:textSize="14sp"
                    app:typeface="robotoLight"
                    />

                <com.gullakh.gullakhandroid.font.RobotoTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:maxLines="1"
                    android:text="1500"
                    android:textColor="#616161"
                    android:textSize="16sp"
                    app:typeface="robotoLight"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
       android:layout_marginLeft="8dp"



        android:orientation="horizontal" >

        <com.gullakh.gullakhandroid.font.RobotoTextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"

            android:text="Date "
            android:textColor="#ff00719b"
            android:textSize="14sp"
            app:typeface="robotoLight"
            />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:text="20%"
            android:textColor="#ff00719b"
            android:textSize="16sp"
            app:typeface="robotoLight"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:background="@drawable/google_cards_background_bottom"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="8dp" >

    </LinearLayout>
</LinearLayout>