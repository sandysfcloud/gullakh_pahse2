<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:background="@drawable/bgque"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="386dp"
        android:layout_weight="1"
        android:gravity="center">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp">

            <Spinner
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/spinner1"
                android:layout_weight="1"
                android:background="@drawable/edittextsimple"
                android:layout_marginLeft="10dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/FirstName"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/edittextsimple"
                android:hint="First Name"
                android:gravity="center"
                android:layout_weight="2"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:singleLine="true" />

        </LinearLayout>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText7"
            android:background="@drawable/edittextsimple"
            android:hint="Middle Name"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:layout_marginRight="10dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/LastName"
                android:background="@drawable/edittextsimple"
                android:hint="Last Name"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:singleLine="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/TextViewOption1"
                android:textColor="#4b4b4b"
                android:text="Male"

                android:gravity="right"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/usermale"

                android:background="@drawable/usermale"
                android:layout_marginRight="10dp" />

            <ImageView
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:minHeight="0dp"
                android:minWidth="0dp"

                android:id="@+id/userfemale"

                android:background="@drawable/userfemale"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp" />

            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:id="@+id/TextViewOption2"
                android:textColor="#4b4b4b"
                android:text="Female"
                android:gravity="left"
                android:layout_marginLeft="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:gravity="center"
            android:background="#2cababab"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" >

            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Is co-applicant working?"
                android:id="@+id/textView36"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/radioGroup7"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/yes"
                    android:checked="false"
                    android:textSize="18dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:id="@+id/no"
                    android:checked="false"
                    android:textSize="18dp"
                    android:layout_weight="0.13" />
            </RadioGroup>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center">

        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Previous"
            android:id="@+id/back"
            android:layout_weight="1"
            android:drawableLeft="@drawable/arrowleft"
            android:background="#b8546e7a"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:textSize="22dp"
            android:paddingLeft="15dp"
            android:gravity="fill" />

        <com.gullakh.gullakhandroid.font.RobotoButton
            app:typeface="robotoLight"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Next"
            android:id="@+id/next"
            android:background="#b8546e7a"
            android:textColor="#ffffff"
            android:drawableRight="@drawable/arrowright"
            android:textAllCaps="false"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:textSize="22dp"
            android:paddingRight="15dp"
            android:paddingLeft="105dp" />
    </LinearLayout>

</LinearLayout>
