<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear"
    android:background="@drawable/bgque"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="5dp"
        android:weightSum="3"

        android:orientation="horizontal"
        android:background="#ffffff">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tloan_amt"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
          android:layout_marginLeft="5dp"
            android:text="Loan Amount: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loan_amt"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:text="data"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="#ffffff">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/filter"

        android:layout_marginTop="8dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/filter"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:id="@+id/tfilter"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:text="Filter "/>
    </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_weight="1"
        android:id="@+id/linedit"
        android:orientation="horizontal"

      >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/editnew"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_marginTop="5dp"
        android:textColor="#616161"
        android:id="@+id/edit"
        android:textSize="16sp"

        android:text="Edit Your Details"/>
    </LinearLayout>
        <Spinner android:id="@+id/spinner1"
            android:layout_width="107dp"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="#616161"
           android:layout_weight="1"
            android:drawSelectorOnTop="true"
            android:entries="@array/sortby"
            android:spinnerMode="dialog"
            android:prompt="@string/sortybylabel"
            />
    </LinearLayout>
    <!--<ListView
        android:id="@+id/list_view"
        style="@style/ListViewStyle"
        />-->
</LinearLayout>