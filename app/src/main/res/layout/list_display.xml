<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgque"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:background="#ffffff">
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tloan_amt"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:textSize="16sp"
            android:text="Loan Amount: "
            app:typeface="robotoLight"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loan_amt"
            android:layout_weight="2"
            android:textSize="16sp"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:text="data"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/linedit"
            android:gravity="right"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/editnew"/>
            <com.gullakh.gullakhandroid.font.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#616161"
                android:id="@+id/edit"
                android:textSize="16sp"

                android:text="Edit Your Details"
                app:typeface="robotoLight"/>
        </LinearLayout>
