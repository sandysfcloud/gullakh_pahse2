<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linear"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bgque"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_margin="5dp"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:background="#ffffff">
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tloan_amt"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:textSize="15sp"
            android:text="Loan Amount: "
            app:typeface="robotoLight"/>
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loan_amt"
            android:layout_weight="2"
            android:textSize="15sp"
            android:textColor="#616161"
            android:layout_marginTop="16dp"
            android:text="data"
            app:typeface="robotoLight"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:id="@+id/linedit"
            android:gravity="right"
            android:orientation="horizontal"

            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/editnew"/>
            <com.gullakh.gullakhandroid.font.RobotoTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textColor="#616161"
                android:id="@+id/edit"
                android:textSize="15sp"


                android:text="Edit Details"
                app:typeface="robotoLight"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="-15dp"
        android:orientation="horizontal">
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenure"
            android:textColor="#616161"

            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:text="Tenure Value: "
            app:typeface="robotoLight"/>
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tenr_amt"
            android:layout_weight="2"
            android:textSize="15sp"
            android:textColor="#616161"

            android:text="data"
            app:typeface="robotoLight"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#ffffff"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/filter"
        android:padding="5dp"
        android:layout_weight="1"

        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"

            android:layout_marginTop="8dp"

            android:src="@drawable/filter"/>
        <com.gullakh.gullakhandroid.font.RobotoTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#616161"
            android:id="@+id/tfilter"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="Filter "
            app:typeface="robotoLight"/>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingRight="20dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        >
    <com.gullakh.gullakhandroid.font.RobotoTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#616161"
        android:textSize="12sp"
        android:text="Sort By"
      android:layout_marginLeft="25dp"
        android:layout_marginRight="-10dp"
        app:typeface="robotoLight"/>
        <Spinner android:id="@+id/spinner1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:textColor="#616161"
            android:textSize="15sp"
            android:drawSelectorOnTop="true"
            android:entries="@array/sortby"

            android:spinnerMode="dialog"

            />

    </LinearLayout>
</LinearLayout>
    </LinearLayout>
    <!--<ListView
        android:id="@+id/list_view"
        style="@style/ListViewStyle"
        />-->
</LinearLayout>