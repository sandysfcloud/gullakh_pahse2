<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ed1c24">

        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Get your Loan processed in just 3 simple steps."
            android:id="@+id/textView14"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/imageView1"
                android:src="@drawable/step1" />

            <com.gullakh.gullakhandroidapp.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:textColor="#ffffff"
                android:text="@string/step1"
                android:gravity="center"
                android:layout_marginLeft="30dp" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.gullakh.gullakhandroidapp.font.RobotoTextView
                app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/textView17"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
                android:textColor="#ffffff"
                android:gravity="center"
                android:text="@string/step2"
                android:layout_marginRight="30dp" />

            <ImageView
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:id="@+id/imageView2"
                android:src="@drawable/step2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/imageView3"
            android:src="@drawable/step3" />
            <com.gullakh.gullakhandroidapp.font.RobotoTextView
                app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/step3"
            android:id="@+id/textView18"
            android:textSize="16dp"
                android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
                android:gravity="center"
                android:layout_marginLeft="30dp" />
    </LinearLayout>
        <com.gullakh.gullakhandroidapp.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Leave rest of the work on Us!!!"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff"
            android:layout_marginTop="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="#ed1c24">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don&apos;t Show this message again."
                android:id="@+id/checkBox"
                android:textColor="#ffffff"
                android:paddingLeft="20dp"
                android:textSize="14dp" />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>