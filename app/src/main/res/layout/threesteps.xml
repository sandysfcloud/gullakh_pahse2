<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="#ed1c24">

        <com.gullakh.gullakhandroid.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Now Loan processing literally at your fingertips!!! "
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff" />

        <com.gullakh.gullakhandroid.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=" Get your Loan processed in just 3 simple steps."
            android:id="@+id/textView14"
            android:layout_gravity="center_horizontal"
            android:textSize="18dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView1"
                android:src="@drawable/step1"
                android:layout_marginLeft="50dp" />

            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Check Your Eligibility "
                android:id="@+id/textView16"
                android:layout_gravity="center_horizontal"
                android:textSize="16dp"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView2"
                android:src="@drawable/step2"
                android:layout_marginLeft="50dp" />
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Create Loan Application "
            android:id="@+id/textView17"
            android:layout_gravity="center_horizontal"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:textColor="#ffffff" />
    </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@drawable/step3"
            android:layout_marginLeft="50dp" />
            <com.gullakh.gullakhandroid.font.RobotoTextView
                app:typeface="robotoLight"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Upload Documents "
            android:id="@+id/textView18"
            android:textSize="16dp"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" />
    </LinearLayout>
        <com.gullakh.gullakhandroid.font.RobotoTextView
            app:typeface="robotoLight"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text=" Leave rest of the work on Us!!!"
            android:id="@+id/textView19"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#ffffff" />
    </LinearLayout>
</LinearLayout>